{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "esModuleInterop": true,
        "typeRoots": [
            "node_modules/@types",
            "src/typings"
        ],
    },
    "include": [
        "./src/**/*",
        "./functions/src/**/*",
        "declarations.d.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "reportFiles": [
            "./src/**/*"
        ]
    }
}
